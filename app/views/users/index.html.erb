<p id="notice"><%= notice %></p>

<h1>ユーザ一覧</h1>

<table>
  <thead>
    <tr>
      <th>氏名</th>
      <th>住所</th>
      <th>年齢</th>
      <th>最終更新日</th>
      <th>作成日</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.address %></td>
        <td><%= user.age %></td>
        <td><%= user.updated_at %></td>
        <td><%= user.created_at %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '✕', user, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

